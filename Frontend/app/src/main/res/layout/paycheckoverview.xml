<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".payCheckOverviewActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#FFF0E0">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBarPay"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#FFA500"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:titleTextColor="#FFFFFF"
            tools:ignore="MissingConstraints">
        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:orientation="vertical">

                        <!-- User Information -->
                        <TextView
                            android:id="@+id/userName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User Name"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/takeHomePay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Take Home Pay: $0.00"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/grossPay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gross Pay: $0.00"
                            android:textSize="18sp" />

                        <!-- Pay Details Section -->
                        <TextView
                            android:id="@+id/payDetailsHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pay Details"
                            android:textSize="18sp"
                            android:paddingTop="10dp"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:id="@+id/payDetailsContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                                <!-- Pay Details Content -->
                                <TextView
                                    android:id="@+id/hoursWorked"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Hours Worked: 0"/>

                                <TextView
                                    android:id="@+id/payRate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pay Rate: $0.00"/>

                                <TextView
                                    android:id="@+id/bonusPay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bonus Pay: $0.00"/>

                                <TextView
                                    android:id="@+id/deductibles"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Deductibles: $0.00"/>
                        </LinearLayout>

                        <Button
                            android:id="@+id/showHideDetailsButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Show/Hide Pay Details"
                            android:backgroundTint="#FFA500">
                        </Button>
                </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="332dp">

                <!-- First Vertical Progress Bar -->
                <ProgressBar
                    android:id="@+id/firstTakHomePay"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:indeterminate="false"
                    android:progress="0"
                    android:max="10000"
                    android:layout_margin="8dp"
                    android:rotation="270"/>

                <!-- Second Vertical Progress Bar -->
                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:indeterminate="false"
                    android:progress="0"
                    android:max="10000"
                    android:layout_margin="8dp"
                    android:rotation="270"/>

                <!-- Third Vertical Progress Bar -->
                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:indeterminate="false"
                    android:progress="0"
                    android:max="10000"
                    android:layout_margin="8dp"
                    android:rotation="270"/>

                <!-- Fourth Vertical Progress Bar -->
                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:indeterminate="false"
                    android:progress="0"
                    android:max="10000"
                    android:layout_margin="8dp"
                    android:rotation="270"/>

                <!-- Fifth Vertical Progress Bar -->
                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:indeterminate="false"
                    android:progress="0"
                    android:max="10000"
                    android:layout_margin="8dp"
                    android:rotation="270"/>

                <!-- Sixth Vertical Progress Bar -->
                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:indeterminate="false"
                    android:progress="0"
                    android:max="10000"
                    android:layout_margin="8dp"
                    android:rotation="270"/>

        </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>


